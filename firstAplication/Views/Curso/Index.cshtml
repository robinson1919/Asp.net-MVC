<!-- Trigger the modal with a button -->
<button type="button" onClick="openModal(0)" class="btn btn-info" data-toggle="modal" data-target="#myModal">Agregar</button>
<br />
<br />


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal Curso</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <form class="formPopup">
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label">ID Curso: </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtIdCurso" placeholder="ID del Curso" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label">Nombre: </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control obligatorio" id="txtPopNombre" placeholder="Nombre">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-3 col-form-label">Descripcion: </label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control obligatorio" id="txtPopDescripcion" placeholder="Descripcion del curso">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="agregar()" class="btn btn-success" id="btnAceptar" @*data-dismiss="modal"*@>Aceptar</button>
            </div>
        </div>

    </div>
</div>

