
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link href="~/Content/cssObligatorio.css" rel="stylesheet" />
<h2>Seccion</h2>

<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Agregar</button>
<br />
<br />

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal Alumno</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">ID Seccion: </label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="txtIdSeccion" placeholder="ID de la seccion" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Nombre: </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtNombre" placeholder="Nombre">
                        </div>
                    </div>                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="agregar()" class="btn btn-success" id="btnAceptar" data-dismiss="modal">Aceptar</button>
            </div>
        </div>

    </div>
</div>

<div id="table">

</div>




<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Seccion.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
